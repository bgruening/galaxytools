<tool_dependency>
    <package name="spectral_hk" version="0.1">
        <install version="0.1">
            <actions>
                <action type="shell_command">git clone https://bitbucket.org/ncgc/spectral_hk.git</action>
                <action type="shell_command">cd spectral_hk</action>
                <action type="shell_command">make</action>
                <action type="shell_command">cp spectral_hk $INSTALL_DIR/bin/spectral_hk</action>
            </actions>
        </install>
        <readme>Compiling spectral_hk requires a C compiler (typically gcc)</readme>
    </package>
</tool_dependency>
