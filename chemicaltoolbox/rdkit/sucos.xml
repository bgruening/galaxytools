<tool id="ctb_rdkit_sucos" name="Sucos" version="@VERSION@.0">
    <description>ABCD</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code"><![CDATA[
        ln -s '$target' ./target.${target.ext} &&
        python3 '$__tool_directory__/sucos.py'
        -i '$infile'
        -if '${infile.ext}'
        --target './target.${target.ext}'
        --targetidx '$targetidx'
        $tanimoto
        --score_mode '$score_mode'
        -o '$outfile'
        -of '${outfile.ext}'
        -l '$logfile'
    ]]></command>
    <inputs>
        <param name="infile" type="data" format="sdf" label="Input file" help="Input file in SDF format"/>
        <param name="refmol" type="data" format="sdf,mol" label="Reference Molecule file" help="Molecule to compare against in Molfile or SDF format"/>
        <param name="target" type="data" format="sdf,mol" label="Target file" help="Target file in SDF or MOL format"/>
        <param name="targetidx" type="integer" value="1" label="Target Id" help="Target molecule index in SDF file if not the first"/>
        <param name="tanimoto" type="boolean" label="Include Tanimoto distance in score" truevalue="-et" falsevalue=""/>
        <param name="score_mode" type="select" label="Score Mode Options" help="Choose the scoring mode for the feature map, default is 'all'">
            <option value="all" selected="true">all</option>
            <option value="closest">closest</option>
            <option value="best">best</option>
        </param>
    </inputs>    
    <outputs>
        <data name="outfile" format="sdf" />
        <data name="logfile" format="txt" label="Logfile for ${tool.name}"/>
    </outputs>
    <tests>
        <test>
            <param name="infile" value="benzene.sdf" ftype="sdf"/>
            <param name="target" value="4e3g_lig.mol" ftype="mol"/>
            <param name="targetidx" value="1"/>
            <output name="logfile">
                <assert_contents>
                    <has_line_matching expression="Target mol has \d+\ heavy atoms"/>
                    <has_line_matching expression="Mol has \d+\ heavy atoms"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="infile" value="mols.sdf" ftype="sdf"/>
            <param name="target" value="mols.sdf" ftype="sdf"/>
            <param name="targetidx" value="1"/>
            <output name="logfile">
                <assert_contents>
                    <has_line_matching expression="Target mol has \d+\ heavy atoms"/>
                    <has_line_matching expression="Mol has \d+\ heavy atoms"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="infile" value="mols.sdf" ftype="sdf"/>
            <param name="target" value="mols.sdf" ftype="sdf"/>
            <param name="targetidx" value="6"/>
            <output name="logfile">
                <assert_contents>
                    <has_line_matching expression="Target mol has \d+\ heavy atoms"/>
                    <has_line_matching expression="Mol has \d+\ heavy atoms"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
        ABCCDEFGHIJKLMNOPQRSTUVWXYZ
    ]]></help>
    <expand macro="citations" />
</tool>