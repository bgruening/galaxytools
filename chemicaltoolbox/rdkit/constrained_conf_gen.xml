<tool id="ctb_rdkit_constrained_conf_gen" name="Constrained Conf Gen" version="@VERSION@.0">
    <description>ABCD</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code"><![CDATA[
        ln -s $refmol ./refmol.${refmol.ext} &&
        python3 '$__tool_directory__/constrained_conf_gen.py'
        -i '$infile'
        -if '${infile.ext}'
        -r './refmol.${refmol.ext}'
        #if $core_smi
            -c '$core_smi'
        #end if
        -o '$outfile'
        -of '${outfile.ext}'
        -l '$logfile'
    ]]></command>
    <inputs>
        <param name="infile" type="data" format="sdf" label="Input file" help="Input file in SDF format"/>
        <param name="refmol" type="data" format="sdf" label="SDF reference file" help="ABCD"/>
        <param name="refmolidx" type="integer" value="1" label="Reference Mol Index" help="Reference molecule index in file if not the first"/>
        <param name="number" type="integer" value="10" label="Number of conformers" help="Number of conformers to generate, if None then input structures are assumed to already be 3D')"/>
        <param name="core_smi" type="text" value="" label="Core substructure" help="If not specified - guessed using MCS"/>
    </inputs>    
    <outputs>
        <data name="logfile" format="txt" label="Logfile for ${tool.name}"/>
        <data name="outfile" format="sdf"/>
    </outputs>
    <tests>
        <test>
            <param name="infile" value="XChemReactionMaker1.sdf" ftype="sdf"/>
            <param name="refmol" value="ref_mol.sdf" ftype="sdf"/>
            <param name="number" value="2" />
            <output name="outfile" ftype="sdf" compare="sim_size" delta="1" file="constrained_conf_gen_output1.sdf"/>
        </test>
    </tests>
    <help><![CDATA[
        ABCCDEFGHIJKLMNOPQRSTUVWXYZ
    ]]></help>
    <expand macro="citations" />
</tool>