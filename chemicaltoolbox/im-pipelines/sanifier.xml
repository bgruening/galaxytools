<tool id="ctb_rdkit_sanifier" name="Sanifier" version="@TOOL_VERSION@+galaxy@GALAXY_VERSION@">
    <description>using RDKit</description>
    <macros>
        <import>macros.xml</import>
        <token name="@GALAXY_VERSION@">0</token>
    </macros>
    <command detect_errors="exit_code"><![CDATA[
        sanifier
        -i '$infile'
        -if '${infile.ext}'
        $enum_tauts
        $enum_stereo
        $standardize
        -stm '$standardize_opts'
        #if $mol_format_opts
            -mf '$mol_format_opts'
        #end if
        --meta
        -o outp
        -of sdf &>> $logfile &&
        cat outp_metrics.txt &>> $logfile &&
        gzip -d outp.sdf.gz
    ]]></command>
    <inputs>
        <param name="infile" type="data" format="sdf" label="Input file" help="Input file in SDF format"/>
        <param name="enum_tauts" type="boolean" label="Enumerate all tautomers" truevalue="-et" falsevalue=""/>
        <param name="enum_stereo" type="boolean" label="Enumerate all stereoisomers" truevalue="-es" falsevalue=""/>
        <param name="standardize" type="boolean" label="Standardize molecules" truevalue="-st" falsevalue="" help="Cannot  be true if enumerate is on"/>
        <param name="standardize_opts" type="select" label="Choose the method to standardize">
            <option value="molvs" selected="true">molvs</option>
            <option value="flatkinson">flatkinson</option>
        </param>
        <param name="mol_format_opts" type="select" label="Format for molecules">
            <option value="smiles">smiles</option>
            <option value="mol_2d">mol_2d</option>
            <option value="mol_3d">mol_3d</option>
        </param>
    </inputs>

    <expand macro="outputs" output_format="tsv" filetype="tabular"/>
    
    <tests>
        <test>
            <param name="infile" value="Kinase_inhibs.sdf" ftype="sdf"/>
            <param name="enum_tauts" value=""/>
            <param name="enum_stereo" value=""/>
            <param name="standardize" value=""/>
            <param name="standardize_opts" value="molvs"/>
            <param name="mol_format_opts" value="mol_2d"/>
            <output name="logfile">
                <assert_contents>
                    <has_line_matching expression="Handled \d+\ molecules, resulting in \d+\ outputs"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
        ABCCDEFGHIJKLMNOPQRSTUVWXYZ
    ]]></help>
    <expand macro="citations" />
</tool>