<tool id="data_manager_cons_scores_downloader" name="Download conservation score file" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" tool_type="manage_data" profile="@PROFILE@">
    <description></description>
    <macros>
        <token name="@TOOL_VERSION@">1.0.0</token>
        <token name="@VERSION_SUFFIX@">0</token>
        <token name="@PROFILE@">23.0</token>
        <token name="@DB_VERSION@">1</token>
    </macros>
    <command detect_errors="exit_code"><![CDATA[

#set $file = str($db_link).split('/')[-1]

mkdir -p '$out_file.extra_files_path' &&
wget $db_link &&
mv '$file' '$out_file.extra_files_path' &&
cp '$dmjson' '$out_file'
    ]]></command>
    <configfiles>
        <configfile name="dmjson"><![CDATA[
#from datetime import date
#set $file = str($db_link).split('/')[-1]

{
    "data_tables":{
    "cons_scores_downloader":[
    {
        "value": "cons_scores_downloaded_#echo date.today().strftime('%d%m%Y')#_${file}",
        "name": "conservation scores ${file}",
        "path": "${file}",
        "version": "@DB_VERSION@"
    }
    ]
}
        }]]></configfile>
    </configfiles>
    <inputs>
        <param name="db_link" type="select" label="Conservation score file to download">
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/phyloP100way/hg38.phyloP100way.bw" selected="true">hg38.phyloP100way</option>
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/phastCons100way/hg38.phastCons100way.bw">hg38.phastCons100way</option>
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/phyloP100way/hg38.phyloP447way.bw" selected="true">hg38.phyloP447way</option>
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/phyloP100way/hg38.phyloP470way.bw" selected="true">hg38.phyloP470way</option>
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/phastCons100way/hg38.phastCons470way.bw">hg38.phastCons470way</option>
            <option value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/md5sum.txt">test</option>
        </param>
    </inputs>
    <outputs>
        <data name="out_file" format="data_manager_json" label="${tool.name}"/>
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="db_link" value="https://hgdownload.cse.ucsc.edu/goldenpath/hg38/md5sum.txt"/>
            <output name="out_file">
                <assert_contents>
                    <has_text text='"cons_scores_downloader":'/>
                    <has_text text='"version": "1"'/>
                    <has_text text='"value": "cons_scores_downloaded'/>
                    <has_text text='"name": "conservation scores"'/>
                    <has_text text='"path": "cons_scores"'/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
This tool downloads conservation score file (.bigWig format) from the UCSC, e.g. using the conservation scores obtained from alignments of 99 vertebrate genomes to the human genome.
    ]]></help>
    <citations>
        <citation type="doi">10.1093/nar/gkae974</citation>
    </citations>
</tool>