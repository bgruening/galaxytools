        <requirements>
            <requirement type="package" version="0.1.9">samtools</requirement>
        </requirements>
    </xml>

    <xml name="version_command">
        <version_command>@EXECUTABLE@</version_command>
    </xml>

    <xml name="stdio">
        <stdio>
            <exit_code range="1:" />
            <exit_code range=":-1" />
            <regex match="Error:" />
