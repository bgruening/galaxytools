<tool id="tRNAmodtRNAscan" name="tRNAscan_for_tRNAmod" version="0.1.0">
  <description>Scans fasta file for RNAs</description>
  <requirements>
	<requirement type="package" version="1.3.1">trnascan-se</requirement>
  </requirements>
  <command>
	<![CDATA[
			 tRNAscan-SE -b -q -O -o ${output} ${input}
	]]>
  </command>
  <stdio>
    <exit_code range="1:" />
    <exit_code range=":-1" />
    <regex match="Error:" />
    <regex match="Exception:" />
  </stdio>
  <inputs>
    <param name="input" type="data" format="fasta"/>
  </inputs>
  <outputs>
    <data name="output" format="tabular" label="${tool.name} on ${on_string}: tabular"/>
  </outputs>

  <tests>
    <test>
      <param name="input" value="tRNAscan.fasta"/>
      <output name="output" file="tRNAscan.tsv"/>
    </test>
  </tests>

  <help>
	This tool trims reads and adapters as preprocessing step of the tRNA_mod pipeline
  </help>
</tool>
