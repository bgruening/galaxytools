<tool id="CMV" name="CMV" version="@VERSION@.1">
    <description>
        CMV is a tool for visualization of RNA family models, also known as covariance models (CM)
    </description>
   <macros>
        <import>macros.xml</import>
    </macros>
    
    <expand macro="requirements" />

    <expand macro="stdio" />
    
    <expand macro="version" />
    <command><![CDATA[
    CMV
    @COMMON_ARGS@
    -m $model_filepath
    -p `pwd`
    > 'warnings'   
    ]]></command>
    
    <inputs>
          <param name="model_filepath" type="data" format="cm" label="Input model"/>
         <section name="common" title="Common parameters">
            <expand macro="common_parameters" />
        </section>
    </inputs>
    
    <outputs>
      <collection name="output_pdfs" type="list" label="${tool.name} on ${on_string}: ">
        <discover_datasets pattern="^[a-zA-Z0-9_-]*.pdf$" format="pdf"/>
      </collection>
      <collection name="output_svg" type="list" label="${tool.name} on ${on_string}: ">
        <discover_datasets pattern="^[a-zA-Z0-9_-]*.svg$" format="svg"/>
      </collection>
      <collection name="output_png" type="list" label="${tool.name} on ${on_string}: ">
        <discover_datasets pattern="^[a-zA-Z0-9_-]*.png$" format="png"/>
      </collection>
      <collection name="output_ps" type="list" label="${tool.name} on ${on_string}: ">
        <discover_datasets pattern="^[a-zA-Z0-9_-]*.ps$" format="ps"/>
      </collection>	
    </outputs>
    
    <tests>
        <test>
            <param name="input_data" value="Hammerhead_HH9.cm" />
            <output name="out" file="Hammerhead_HH9.pdf" />
        </test>
    </tests>

    <help><![CDATA[ **CMV -- Visualisation of Covariance Models**
**Input.**
Covariance model in INFERNAL format.

**Output.**
File in pdf,svg,png,ps format.
    
For more information, see     
.. __: https://github.com/eggzilla/cmv
    ]]></help>

    <expand macro="citations" />
    
</tool>
