<tool id="cmcv" name="cmcv" version="@VERSION@.1">
    <description>
        CMCV is a tool for visualization of comparisons between RNA family models (CM)
    </description>
   <macros>
        <import>macros.xml</import>
    </macros>
    
    <expand macro="requirements" />

    <expand macro="stdio" />
    
    <expand macro="version" />
    <command><![CDATA[
    CMCV
    @COMMON_ARGS@
    -m $model_filepath
    -r $cmcompare_file
    -p `pwd`
    > 'warnings'   
    ]]></command>
    
    <inputs>
      <param name="model_filepath" type="data" format="cm" label="Input model"/>
      <param name="cmcompare_file" type="data" format="cmcompare" label="Input comparison"/>
      <section name="common" title="Common parameters">
        <expand macro="common_parameters" />
      </section>
    </inputs>
    
    <outputs>
      <data format="pdf" name="output_pdfs" label="${tool.name} on ${on_string}: Output visualisation" >
        <filter>output_format</filter>
      </data>
      <data format="svg" name="output_svgs" label="${tool.name} on ${on_string}: Output visualisation" >
        <filter>output_format</filter>
      </data>
      <data format="png" name="output_pngs" label="${tool.name} on ${on_string}: Output visualisation" >
        <filter>output_format</filter>
      </data>
      <data format="ps" name="output_ps" label="${tool.name} on ${on_string}: Output visualisation" >
        <filter>output_format</filter>
      </data>
    </outputs>
    
    <tests>
      <test>
        <param name="model_filepath" value="hammerheadClan.cm" />
	<param name="hmmcompare_file" value="input.cmcompare" />
        <output name="out1" file="Hammerhead_II.pdf" />
	<output name="out2" file="Hammerhead_HH10.pdf" />
      </test>
    </tests>

    <help><![CDATA[ **CMCV -- Visualisation of RNA family model comparison**
**Input.**
Covariance Models in INFERNAL format. 

**Output.**
File in pdf,svg,png,ps format.
    
For more information, see     
.. __: https://github.com/eggzilla/cmv
    ]]></help>

    <expand macro="citations" />
    
</tool>
