<tool id="alevin-fry_generate-permit-list" name="alevin-fry generate-permit-list" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" python_template_version="3.5" profile="@PROFILE_VERSION@">
    <description>Generate a permit list of barcodes from a RAD file</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        alevin-fry generate-permit-list $KNEEDISTANCE --input '$input1' --expected-ori '$EXPECTEDORI' --output-dir '$output1' --expect-cells '$EXPECTCELLS' --force-cells '$FORCECELLS' --valid-bc '$VALIDBC' --min-reads '$MINREADS' --unfiltered-pl '$UNFILTEREDPL'
    ]]></command>
    <inputs>
        <param type="data" name="input1" label="map RAD file" format="rad"/>
        <param type="select" name="EXPECTEDORI" label="Expected orientation">
            <option value="fw">fw</option>
            <option value="rc">rc</option>
            <option value="both">both</option>
            <option value="either">either</option>
        </param>
        <param type="boolean" name="KNEEDISTANCE" truevalue="--knee-distance" falsevalue="" label="Attempt to determine the number of barcodes to keep using the knee-distance method."/>
        <param type="integer" name="EXPECTCELLS" optional="true" label="Defines the expected number of cells to use in determining the read based cutoff"/>
    </inputs>
    <outputs>
        <!-- add output -->
    </outputs>
    <tests>
        <test>
            <!-- add test -->
        </test>
    </tests>
    <!-- add help -->
    <help>
        help
    </help>
    <expand macro="citations"/>
</tool>
