  <token name="@COLUMNS_FUNCTION@">
def columns(f,c):
  data = pandas.read_csv(f, sep='\t', header=None, index_col=None, parse_dates=True, encoding=None, tupleize_cols=False)
  cols = c.split (',')
  cols = map(int, cols)
  cols = list(map(lambda x: x - 1, cols))
  y = data.iloc[:,cols].values
  return y
  </token>

