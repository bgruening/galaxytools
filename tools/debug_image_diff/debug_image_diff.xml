<tool id="debug_image_diff" name="debug" version="0.1" profile="23.02">
    <description></description>
    <requirements>
        <requirement type="package" version="2.3.5">numpy</requirement>
    </requirements>
    <command detect_errors="exit_code">
         <![CDATA[
        export MKL_NUM_THREADS=1 &&
        export CELLPOSE_LOCAL_MODELS_PATH='cellpose_models' &&
        cp '$input' ./cp_masks.tiff
        ]]>
    </command>
    <inputs>
        <param name="input" type="data" format="ome.tiff,tiff,jpg,png" label="Input"/>
    </inputs>
    <outputs>
        <data format="tiff" name="cp_mask" from_work_dir="cp_masks.tiff"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="image_cp_masks_cpgenerated.tif"/>
            <output name="cp_mask" file="image3d_cp_masks_truth.tiff" compare="image_diff"/>
        </test>
    </tests>
    <help>
        debug
    </help>
    <citations>
        <citation type="doi">10.1101/2020.02.02.931238</citation>
    </citations>
</tool>
