    <xml name="requirements">
        <requirements>
            <requirement type="package" version="@TOOL_VERSION@">antismash</requirement>
        </requirements>
    </xml>
    <xml name="bio_tools">
        <xrefs>
            <xref type="bio.tools">antismash</xref>
        </xrefs>
    </xml>
    <xml name="citations">
        <citations>
            <citation type="doi">>10.1093/nar/gkv437</citation>
