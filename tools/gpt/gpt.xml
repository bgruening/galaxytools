<tool id="gpt" name="chatGPT" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <description>Integrating OpenAI's ChatGPT into Galaxy</description>
    <requirements>
        <requirement type="package" version="3.12.4">python</requirement>
        <requirement type="package" version="1.35.13">openai</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/gpt.py'
        "$context"
        "$question"
    ]]></command>
    <inputs>
        <param name="context" type="text" optional="false" label="Context" help="Text you want to make question about"/>
        <param name="question" type="text" optional="false" label="Question" help="Question about the text provided"/>
    </inputs>
    <outputs>
        <data name="output" format="txt" label="Output"/>
    </outputs>
    <tests>
        <test expect_exit_code="0" expect_failure="false">
            <param name="context" value="This is a test"/>
            <param name="question" value="What is this?"/>
            <output name="output" />
        </test>
    </tests>
    <help>
        This tool will integrate OpenAI's ChatGPT into Galaxy. 
        Provide a text and a question about the text, and get a response generated by ChatGPT.
    </help>
