<tool id="odosenl_load_prokaryotes" name="Load selectable genomes" version="@VERSION@">
    <description>from Complete Microbial Genomes table</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="stdio"/>
    <command><![CDATA[
        load_prokaryotes.py $prokaryotes
    ]]></command>
    <outputs>
        <data format="tabular" name="prokaryotes" label="Selectable genomes" />
    </outputs>
    <help><![CDATA[
        This tool preloads the selectable genomes for analysis in the Ortholog Direction of Selection Engine workflow.
    ]]></help>
    <expand macro="citations"/>
</tool>

