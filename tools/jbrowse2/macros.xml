        <expand macro="auto_manual_tk" cond_label="@COND_LABEL@" cond_name="@COND_NAME@" select_label="@SELECT_LABEL@" select_name="@SELECT_NAME@" automatic_label="@AUTOMATIC_LABEL@" manual_label="@MANUAL_LABEL@">
